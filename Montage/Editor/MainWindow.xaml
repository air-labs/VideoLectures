<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ed="clr-namespace:Editor"
        Title="MainWindow" WindowState="Maximized">
    <StackPanel Orientation="Vertical">
        <Menu>
            <MenuItem Command="ed:Commands.Save"/>
            <MenuItem Command="ed:Commands.Export"/>
        </Menu>
        <StackPanel Orientation="Horizontal">
            <MediaElement Name="FaceVideo"></MediaElement>
            <MediaElement Name="ScreenVideo"></MediaElement>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Width="50"  Name="Pause">Play</Button>
            <Rectangle Width="10"/>
            <CheckBox Name="OnlyGood" VerticalAlignment="Center">Show selected only</CheckBox>
            <Rectangle Width="10"/>
            <Label>Mode:</Label>
            <Label Name="CurrentMode" Content="{Binding CurrentMode}"></Label>
        </StackPanel>
        <ed:Timeline x:Name="Timeline"/>
    </StackPanel>
</Window>
