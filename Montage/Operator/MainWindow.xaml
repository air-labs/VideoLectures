    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Image x:Name="Status"
            Width="100"
            Height="100"
            Source="{StaticResource trash}"/>

            <Image 
                Width="100"
                Height="100"
                x:Name="VideoSource" 
                Source="{StaticResource face}"/>

            <Label 
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
            x:Name="Clock" 
            FontSize="100" 
            Content="00:00" 
            FontFamily="Courier New" 
            FontWeight="Bold">
                <Label.Foreground>
                    <SolidColorBrush x:Name="ClockFore" Color="Black"/>
                </Label.Foreground>
                <Label.Background>
                    <SolidColorBrush x:Name="ClockBack"/>
                </Label.Background>
                <Label.Triggers>
                    <EventTrigger RoutedEvent="Label.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource clock}"/>
                    </EventTrigger>
                </Label.Triggers>
            </Label>
        </StackPanel>
        <ScrollViewer x:Name="Viewer">
        <TextBlock
            FontSize="36"
            x:Name="TextHolder" 
            Text="{StaticResource fish}" 
            TextWrapping="Wrap"/>
        </ScrollViewer>        
    </DockPanel>
</Window>
