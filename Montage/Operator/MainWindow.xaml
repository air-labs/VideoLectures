<Window x:Class="Operator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Width="600" Height="400">
    <Window.Resources>
        <BitmapImage x:Key="face" UriSource="/Images/face.jpg"/>
        <BitmapImage x:Key="screen" UriSource="/Images/screen.jpg"/>
        <BitmapImage x:Key="clapper" UriSource="/Images/clapperboard.png"/>
        <BitmapImage x:Key="trash" UriSource="/Images/trash.png"/>
        <BitmapImage x:Key="question" UriSource="/Images/question.png"/>
        <Storyboard x:Key="statusFadeout">
            <DoubleAnimation
                                Storyboard.TargetName="Status"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="1"
                                BeginTime="0:0:0"
                                Duration="0:0:0"/>
            <DoubleAnimation
                                Storyboard.TargetName="Status"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                BeginTime="0:0:0"
                                Duration="0:0:1"/>
        </Storyboard>
        <Storyboard x:Key="clock">
            <ColorAnimation 
                    Storyboard.TargetName="ClockBack"
                    Storyboard.TargetProperty="Color"
                    From="Transparent"
                    To="Transparent"
                    Duration="0:0:0"/>
            <ColorAnimation 
                                Storyboard.TargetName="ClockFore"
                                Storyboard.TargetProperty="Color"
                                From="Green"
                                To="Yellow"
                                Duration="0:0:5"/>
                <ColorAnimation 
                                Storyboard.TargetName="ClockFore"
                                Storyboard.TargetProperty="Color"
                                From="Yellow"
                                To="Red"
                                BeginTime="0:0:5"
                                Duration="0:0:5"/>
                <ColorAnimation
                                Storyboard.TargetName="ClockFore"
                                Storyboard.TargetProperty="Color"
                                From="Red"
                                To="Black"
                                BeginTime="0:0:10"
                                Duration="0"/>
                <ColorAnimation
                                Storyboard.TargetName="ClockBack"
                                Storyboard.TargetProperty="Color"
                                From="Transparent"
                                To="Red"
                                BeginTime="0:0:10"
                                Duration="0:0:0.5"
                                AutoReverse="True"
                                RepeatBehavior="Forever"/>
           
        </Storyboard>
